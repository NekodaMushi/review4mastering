generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model note {
  id                 String             @id @default(cuid())
  user_id            String
  text               String
  link               String?            @db.VarChar(500)
  stade_actuel       stade_revision?    @default(DIX_MINUTES)
  created_at         DateTime?          @default(now()) @db.Timestamp(6)
  prochaine_revision DateTime           @db.Timestamp(6)
  derniere_revision  DateTime?          @db.Timestamp(6)
  completed_at       DateTime?          @db.Timestamp(6)
  updated_at         DateTime?          @default(now()) @db.Timestamp(6)
  user               User               @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  revision_history   revision_history[]

  @@index([prochaine_revision], map: "idx_note_prochaine_revision")
  @@index([stade_actuel], map: "idx_note_stade_actuel")
  @@index([user_id], map: "idx_note_user_id")
}

model revision_history {
  id            String          @id @default(cuid())
  note_id       String
  action_type   action_type
  ancien_stade  stade_revision?
  nouveau_stade stade_revision
  created_at    DateTime?       @default(now()) @db.Timestamp(6)
  note          note            @relation(fields: [note_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([note_id], map: "idx_revision_history_note_id")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique @db.VarChar(255)
  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now()) @db.Timestamp(6)
  updatedAt     DateTime  @default(now()) @updatedAt @db.Timestamp(6)
  sessions      Session[]
  accounts      Account[]
  notes         note[]

  @@map("user")
}

model Session {
  id        String   @id @default(cuid())
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id @default(cuid())
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

enum action_type {
  weak
  again
  good
}

enum stade_revision {
  DIX_MINUTES @map("10_minutes")
  UN_JOUR     @map("1_jour")
  SEPT_JOURS  @map("7_jours")
  UN_MOIS     @map("1_mois")
  TROIS_MOIS  @map("3_mois")
  UN_AN       @map("1_an")
  DEUX_ANS    @map("2_ans")
  CINQ_ANS    @map("5_ans")
  COMPLETED
}
